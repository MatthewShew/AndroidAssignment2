<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.bcit.ass2.shewmatthew_murphywilliam.DetailsActivity">


    <TextView
        android:id="@+id/detailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        style="@style/details"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/detailCapital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        style="@style/details"/>

    <TextView
        android:id="@+id/detailRegion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        style="@style/details"/>

    <TextView
        android:id="@+id/detailArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        style="@style/details"/>

    <TextView
        android:id="@+id/detailPopulation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        style="@style/details"/>

    <TextView
        android:id="@+id/detailBorders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        style="@style/details"/>

    <WebView
        android:id="@+id/flag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </WebView>

</LinearLayout>
